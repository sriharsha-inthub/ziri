{
  "name": "ziri",
  "version": "0.2.1",
  "description": "Ziri — AI code context CLI (per-repo stores, streaming embeddings, multi-repo registry)",
  "type": "module",
  "bin": {
    "ziri": "bin/ziri.js",
    "ziri-lsp": "bin/ziri-lsp.js"
  },
  "engines": {
    "node": ">=18"
  },
  "bundledDependencies": [
    "yaml",
    "minimist",
    "toml"
  ],
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run --reporter=verbose",
    "test:unit": "vitest run test/unit --reporter=verbose",
    "test:unit-only": "vitest run test/unit --reporter=verbose",
    "test:integration": "vitest run test/integration --reporter=verbose",
    "test:passing": "npm run test:unit-only",
    "check:test-types": "node ../../scripts/check-test-types.js",
    "prepublishOnly": "npm run check:test-types && npm run test:unit-only && npm run build",
    "prepublish": "npm run check:test-types && npm run test:unit-only && npm run build",
    "build": "npm pack",
    "publish:npm": "npm publish",
    "postinstall": "node -e \"console.log('✅ ziri installed. Run ziri --help.')\"",
    "render-docs": "node ../../scripts/render-docs.js"
  },
  "files": [
    "bin/",
    "lib/",
    "types/",
    "README.md",
    "package.json",
    "config-ui/"
  ],
  "dependencies": {
    "@babel/generator": "^7.23.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "faiss-node": "^0.5.1",
    "fast-xml-parser": "^5.2.5",
    "minimist": "^1.2.8",
    "toml": "^3.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sriharsha-inthub/ziri.git",
    "directory": "packages/ziri-js"
  },
  "homepage": "https://github.com/sriharsha-inthub/ziri#readme",
  "bugs": {
    "url": "https://github.com/sriharsha-inthub/ziri/issues"
  },
  "keywords": [
    "ai",
    "code-context",
    "cli",
    "embeddings",
    "semantic-search"
  ],
  "author": "Ziri Team",
  "license": "MIT",
  "publishConfig": {
    "tag": "beta"
  },
  "bundleDependencies": [
    "yaml",
    "minimist",
    "toml"
  ]
}
