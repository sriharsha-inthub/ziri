{
  "name": "ziri",
  "version": "0.1.10",
  "description": "Ziri — AI code context CLI (per-repo stores, streaming embeddings, multi-repo registry)",
  "type": "module",
  "bin": {
    "ziri": "bin/ziri.js"
  },
  "engines": {
    "node": ">=18"
  },
  "bundledDependencies": [
    "yaml",
    "minimist",
    "toml"
  ],
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run --reporter=verbose",
    "test:unit": "vitest run test/unit --reporter=verbose",
    "test:integration": "vitest run test/integration --reporter=verbose",
    "build": "npm pack",
    "prepublishOnly": "npm run prepublish",
    "prepublish": "npm run test:passing && npm run build",
    "test:passing": "vitest --run --reporter=verbose --exclude='**/comprehensive-integration.test.js' --exclude='**/provider-migration.test.js' --exclude='**/requirements-validation.test.js' --exclude='**/performance-regression.test.js' --exclude='**/repository-isolation.test.js' --exclude='**/embedding-pipeline.test.js' --exclude='**/provider-benchmark.test.js' --exclude='**/repository-parser.test.js' --exclude='**/file-walker.test.js' --exclude='**/memory-integration.test.js'",
    "publish:npm": "npm publish",
    "postinstall": "node -e \"console.log('✅ ziri installed. Run `ziri --help`.')\""
  },
  "files": [
    "bin/",
    "lib/",
    "types/",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "faiss-node": "^0.5.1",
    "minimist": "^1.2.8",
    "toml": "^3.0.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ziri.git",
    "directory": "packages/ziri-js"
  },
  "homepage": "https://github.com/your-username/ziri#readme",
  "bugs": {
    "url": "https://github.com/your-username/ziri/issues"
  },
  "keywords": [
    "ai",
    "code-context",
    "cli",
    "embeddings",
    "semantic-search"
  ],
  "author": "Ziri Team",
  "license": "MIT"
}
